<Window x:Class="LibScholarAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibScholarAssist" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter Research Question:" Margin="0,0,0,5"/>
            <TextBox Name="ResearchInput" Height="30"/>
            <Button Content="Analyze" Click="OnAnalyzeClick" Margin="0,10,0,10"/>
            <TextBlock Text="Analysis Results:"/>
            <TextBox Name="ResultOutput" Height="200" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>